<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{{ site_name }}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/app/materialize/css/materialize-1.1.0.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/materialize/iconfont/material-icons.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('bundles/app/css/custom.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon-lelefan.png') }}" />
        <script src="{{ asset('bundles/app/js/vanilla_top.js') }}"></script>
    </head>
    <body>
        <header>
        </header>
        <main>
            {% block beforecontainer %}{% endblock %}
            <div class="container">
                <div class="section">
                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashBag.all %}
                            {% for message in messages %}
                                <div class="row">
                                    <div class="col s12">
                                        <div class="card-panel teal {{ type }}">
                                            <span class="white-text">{{ message|trans({}, 'FOSUserBundle') }}</span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                    {% block content %}{% endblock %}
                </div>
            </div>

            {% block aftercontainer %}{% endblock %}

        </main>
        {% include "JqueryBundle:Jquery:jquery.html.twig" %}
        <script src="{{ asset('bundles/app/materialize/js/materialize-1.1.0.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
