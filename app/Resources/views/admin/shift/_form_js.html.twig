<script>
    $(document).ready(function() {
        // shift start & end fields have a datetime format
        // - date should be equal ('yyyy-mm-dd') format
        // - date picker is hidden
        // - only time picker is displayed
        $('#appbundle_shift_start_date.datepicker').datepicker({
            format: 'yyyy-mm-dd'
        });
        $("form[name='appbundle_shift']").submit(function(event) {
            $("input[id='appbundle_shift_end_date']").val($("input[id='appbundle_shift_start_date']").val());
        });
        // bucket_add_form
        $("form[name='bucket_add_form']").submit(function(event) {
            $("input[id='bucket_add_form_end_date']").val($("input[id='bucket_add_form_start_date']").val());
        });
    });
</script>
