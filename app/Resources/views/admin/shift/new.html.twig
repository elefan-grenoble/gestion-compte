{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
<a href="{{ path('homepage') }}"><i class="material-icons">home</i></a><i class="material-icons">chevron_right</i>
<a href="{{ path('admin') }}"><i class="material-icons">build</i>&nbsp;Administration</a><i class="material-icons">chevron_right</i>
<i class="material-icons">add</i>&nbsp;Ajouter un créneau ponctuel
{% endblock %}

{% block content %}
    <h4>Ajouter un créneau ponctuel</h4>

    {{ form_start(form) }}
    <div class="errors">
        {{ form_errors(form) }}
    </div>
    <div class="row">
        <div class="col s12">
            {{ form_row(form.start.date, { attr: { class: 'datepicker' } }) }}
        </div>
    </div>
    <div class="row">
        <div class="col s12 m6">
            {{ form_row(form.start.time, { label: 'Heure de début', attr: { class: 'timepicker' } }) }}
        </div>
        <div class="col s12 m6">
            <input type="hidden" id="{{ form.end.date.vars.id }}" name="{{ form.end.date.vars.full_name }}">
            {{ form_row(form.end.time, { label: 'Heure de fin', attr: { class: 'timepicker' } }) }}
        </div>
    </div>
    <div class="row">
        <div class="col s12 m8">
            {{ form_row(form.formation) }}
        </div>
        <div class="col s12 m4">
            {{ form_row(form.number) }}
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            {{ form_row(form.job) }}
        </div>
    </div>
    <div>
        <button type="submit" class="btn waves-effect waves-light">Créer</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}

{% block javascripts %}
    {% include "/admin/shift/_form_js.html.twig" %}
{% endblock %}
