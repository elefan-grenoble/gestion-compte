{% extends 'layout.html.twig' %}

{% block title %}Editer une formation - {{ site_name }}{% endblock %}

{% block breadcrumps %}
<a href="{{ path('homepage') }}"><i class="material-icons">home</i></a> <i class="material-icons">chevron_right</i>
<a href="{{ path('admin') }}"><i class="material-icons">build</i>Admin</a> <i class="material-icons">chevron_right</i>
<a href="{{ path('admin_formations') }}"><i class="material-icons">list</i>Liste des formations</a> <i class="material-icons">chevron_right</i>
<i class="material-icons">edit</i>Editer
{% endblock %}

{% block content %}
    <h4>Editer une formation</h4>

    {{ form_start(form) }}
    <div class="row">
        <div class="col s6">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div>
        <button type="submit" class="btn waves-effect waves-light"><i class="material-icons left">save</i>Enregistrer</button>
    </div>
    {{ form_widget(form) }}
    {{ form_end(form) }}

    {% if is_granted("ROLE_SUPER_ADMIN") %}
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}
        <div>
            <button type="submit" class="btn waves-effect waves-light red">Supprimer</button>
        </div>
        {{ form_end(delete_form) }}
    {% endif %}
{% endblock %}
