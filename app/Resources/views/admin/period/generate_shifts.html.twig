{% extends 'layout.html.twig' %}

{% block breadcrumps %}
    <a href="{{ path('homepage') }}"><i class="material-icons">home</i></a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('admin') }}"><i class="material-icons">tune</i>admin</a> <i class="material-icons">chevron_right</i>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col s12">
            <div class="errors">
                {{ form_errors(form.date_from) }}
            </div>
            <div class="input-field">
                {{ form_label(form.date_from) }}
                {{ form_widget(form.date_from) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="errors">
                {{ form_errors(form.date_to) }}
            </div>
            <div class="input-field">
                {{ form_label(form.date_to) }}
                {{ form_widget(form.date_to) }}
            </div>
        </div>
    </div>
    <div>
        <button type="submit" class="btn waves-effect waves-light">Générer</button>
    </div>
    {{ form_end(form) }}

{% endblock %}
