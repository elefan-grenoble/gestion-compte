{% extends 'layout.html.twig' %}

{% block title %}Editer un équipement à code - {{ site_name }}{% endblock %}

{% block breadcrumbs %}
<a href="{{ path('homepage') }}"><i class="material-icons">home</i></a><i class="material-icons">chevron_right</i>
<a href="{{ path('admin') }}"><i class="material-icons">build</i>&nbsp;Administration</a><i class="material-icons">chevron_right</i>
<a href="{{ path('admin_codedevice_index') }}"><i class="material-icons">list</i>&nbsp;Liste des équipements à code</a><i class="material-icons">chevron_right</i>
<i class="material-icons">edit</i>&nbsp;Editer
{% endblock %}

{% block content %}
    <h4>Editer un équipement à code</h4>

    {{ form_start(form) }}
    <div class="errors">
        {{ form_errors(form) }}
    </div>
    {% include "/admin/codedevice/_form.html.twig" with { form: form } %}
    <div>
        <a href="{{ path('admin_codedevice_index') }}" class="waves-effect waves-light btn red white-text" title="Annuler">Annuler</a>
        <button type="submit" class="btn waves-effect waves-light">
            <i class="material-icons left">save</i>Enregistrer
        </button>
    </div>
    {{ form_end(form) }}

    {% if is_granted("ROLE_SUPER_ADMIN") %}
        {{ form_start(delete_form) }}
        <button type="submit" class="btn waves-effect waves-light red" onclick="var r = confirm('Etes-vous sûr de vouloir supprimer cet équipement ?!'); if (r == true) {$(this).closest('form').submit();}; event.stopPropagation();">
            <i class="material-icons left">delete</i>Supprimer
        </button>
        {{ form_end(delete_form) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% include "/admin/codedevice/_js.twig" %}
{% endblock %}
