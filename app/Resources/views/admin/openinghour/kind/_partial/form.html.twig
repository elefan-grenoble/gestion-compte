{% set edit = edit ?? false %}

<div class="errors">
    {{ form_errors(form) }}
</div>
<div class="row">
    <div class="col s12">
        {{ form_row(form.name) }}
    </div>
</div>
<div class="row">
    <div class="col s12 m6">
        {{ form_row(form.start_date) }}
    </div>
    <div class="col s12 m6">
        {{ form_row(form.end_date) }}
    </div>
</div>
<div class="row">
    <div class="col s12">
        {{ form_errors(form.enabled) }}
        <label>
            {{ form_widget(form.enabled) }}
            <span>{{ form.enabled.vars.label }}</span>
            <div class="helper-text" data-error="wrong" data-success="right">Nécessaire pour le bandeau Ouvert / Fermé</div>
        </label>
    </div>
</div>

{% if edit %}
    {% include "admin/member/_partial/created_updated_card.html.twig" with { item: openingHourKind } %}
{% endif %}
