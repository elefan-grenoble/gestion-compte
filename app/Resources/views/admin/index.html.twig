{% extends 'layout.html.twig' %}

{% block title %}Administration - {{ site_name }}{% endblock %}

{% block breadcrumbs %}
<a href="{{ path('homepage') }}"><i class="material-icons">home</i></a><i class="material-icons">chevron_right</i>
<i class="material-icons">build</i>&nbsp;Administration
{% endblock %}

{% block content %}
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <h4>
                <i class="material-icons">build</i>&nbsp;Administration
            </h4>

            {% if is_granted("ROLE_USER_VIEWER") %}
                <h6><i class="material-icons">person_add</i>&nbsp;Adhésions</h6>
                <a href="{{ path("user_office_tools") }}" class="waves-effect waves-light teal btn">
                    <i class="material-icons left">folder_shared</i>Adhésion / ré-adhésion
                </a>
            {% endif %}

            {% if is_granted("ROLE_USER_MANAGER") %}
                <h6><i class="material-icons">people</i>&nbsp;Membres</h6>
                <a href="{{ path("user_index") }}" class="waves-effect waves-light btn white black-text">
                    <i class="material-icons left main-color-text">people</i>Gérer les membres
                </a>
                <a href="{{ path('ambassador_shifttimelog_list') }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">phone</i>Relances créneaux
                </a>
                <a href="{{ path("admin_membershipshiftexemption_index") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">beach_access</i>Gérer les exemptions de bénévolat
                </a>
            {% endif %}
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path("member_join") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">call_merge</i>Joindre deux comptes
                </a>
                <a href="{{ path("admin_commissions") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">tune</i>Gérer les commissions
                </a>
                <a href="{{ path("formation_list") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">tune</i>Gérer les formations
                </a>
            {% endif %}

            {% if is_granted("ROLE_SHIFT_MANAGER") %}
                <h6><i class="material-icons">date_range</i>&nbsp;Créneaux</h6>
                <a href="{{ path("booking_admin") }}" class="waves-effect waves-light btn white black-text">
                    <i class="material-icons left orange-text">date_range</i>Gérer les créneaux
                </a>
                <a href="{{ path("admin_shiftfreelog_index") }}" class="waves-effect waves-light btn orange">
                    <i class="material-icons left">delete_sweep</i>Annulations créneaux
                </a>
                <a href="{{ path("shift_new") }}" class="waves-effect waves-light btn orange">
                    <i class="material-icons left">add</i>créer un créneau ponctuel
                </a>
                <a href="{{ path("period_admin") }}" class="waves-effect waves-light btn orange">
                    <i class="material-icons left">date_range</i>la semaine type
                </a>
            {% endif %}
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path("admin_shiftexemption_index") }}" class="waves-effect waves-light btn orange">
                    <i class="material-icons left">beach_access</i>les motif d'exemptions
                </a>
                <a href="{{ path("job_list") }}" class="waves-effect waves-light btn orange">
                    <i class="material-icons left">person</i>les postes de bénévolat
                </a>
            {% endif %}

            {% if is_granted("ROLE_PROCESS_MANAGER") %}
                <h6><i class="material-icons">content_paste</i>&nbsp;Contenus</h6>
                <a href="{{ path("process_update_list") }}" class="waves-effect waves-light btn lime darken-1">
                    <i class="material-icons left">assignment</i>Gérer les nouveautés
                </a>
                <a href="{{ path("event_list") }}" class="waves-effect waves-light btn teal">
                    <i class="material-icons left">event</i>Événements
                </a>
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path("admin_event_kind_list") }}" class="waves-effect waves-light btn teal">
                        <i class="material-icons left">event</i>Types d'événements
                    </a>
                {% endif %}
                <a href="{{ path("widget_generator") }}" class="waves-effect waves-light btn teal">
                    <i class="material-icons left">tune</i>Générer un widget
                </a>
                <a href="{{ path("dynamic_content_list") }}" class="waves-effect waves-light btn teal">
                    <i class="material-icons left">content_paste</i>Contenus dynamiques
                </a>
                <a href="{{ path("email_template_list") }}" class="waves-effect waves-light btn teal">
                    <i class="material-icons left">mail</i>Modèles d'emails
                </a>
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path("admin_socialnetwork_list") }}" class="waves-effect waves-light btn teal">
                        <i class="material-icons left">public</i>Réseaux sociaux
                    </a>
                {% endif %}
            {% endif %}

            {% if is_granted("ROLE_FINANCE_MANAGER") %}
                <h6><i class="material-icons">attach_money</i>&nbsp;Finances</h6>
                <a href="{{ path("registrations") }}" class="waves-effect waves-light btn indigo">
                    <i class="material-icons left">attach_money</i>Gérer les Adhésions / Ré-adhésions
                </a>
                <a href="{{ path("helloasso_payments") }}" class="waves-effect waves-light btn indigo">
                    <i class="material-icons left">settings_ethernet</i>Paiements helloasso
                </a>
                <a href="{{ path("helloasso_browser") }}" class="waves-effect waves-light btn indigo">
                    <i class="material-icons left">contact_mail</i>Campagnes helloasso
                </a>
            {% endif %}

            {% if display_keys_shop %}
                {% if is_granted("ROLE_ADMIN") %}
                    <h6><i class="material-icons">vpn_key</i>&nbsp;Boîtier cles</h6>
                    <a href="{{ path("codes_list") }}" class="waves-effect waves-light btn deep-purple lighten-1">
                        <i class="material-icons left">vpn_key</i>Voir code(s)
                    </a>
                    {% if code_generation_enabled %}
                        <a href="{{ path("code_generate") }}" class="waves-effect waves-light btn deep-purple darken-1">
                            <i class="material-icons left">vpn_key</i>Déposer les clefs
                        </a>
                    {% else %}
                        <a href="{{ path("code_edit") }}" class="waves-effect waves-light btn deep-purple darken-1">
                            <i class="material-icons left">vpn_key</i>Définir un nouveau code
                        </a>
                    {% endif %}
                {% endif %}
            {% endif %}

            {% if is_granted("ROLE_ADMIN") %}
                <h6><i class="material-icons">verified_user</i>&nbsp;Rôles utilisateurs</h6>
                <a href="{{ path("roles_list") }}" class="waves-effect waves-light btn deep-purple">
                    <i class="material-icons left">list</i>Liste des roles
                </a>
            {% endif %}

            {% if is_granted("ROLE_SUPER_ADMIN") %}
                <h5>Actions super admin</h5>
                <h6>Membres</h6>
                <a href="{{ path("user_import_csv") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">file_upload</i>Importer des adhérents (CSV)
                </a>
                <a href="{{ path("admin_emails_csv") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">file_download</i>Exporter les adhérents (CSV)
                </a>

                <h6>Admins</h6>
                <a href="{{ path("user_install_admin") }}" class="waves-effect waves-light btn deep-purple">
                    <i class="material-icons left">add</i>Ajouter un admin
                </a>
                <a href="{{ path("admins_list") }}" class="waves-effect waves-light btn deep-purple">
                    <i class="material-icons left">list</i>Liste des utilisateurs admin
                </a>

                <h6>Divers</h6>
                <a href="{{ path("client_list") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">vpn_key</i>Gérer les clients Oauth
                </a>
                <a href="{{ path("service_list") }}" class="waves-effect waves-light btn">
                    <i class="material-icons left">extension</i>Gérer les services
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
