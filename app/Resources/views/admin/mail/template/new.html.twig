{% extends 'layout.html.twig' %}


{% block breadcrumps %}
    <a href="{{ path('homepage') }}"><i class="material-icons">home</i></a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('admin') }}"><i class="material-icons">build</i>Admin</a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('email_template_list') }}"><i class="material-icons">list</i>modèles d'emails</a> <i class="material-icons">chevron_right</i>
    <i class="material-icons">add</i>
{% endblock %}

{% block content %}
    <h4 class="">Nouveau modèle d'email</h4>

    <p>La balise <strong>{{ "{{template_content}}" }}</strong> dans le modèle sera remplacée par le contenu du mail.</p>

    {{ form_start(form) }}
    <div class="errors">
        {{ form_errors(form.content) }}
    </div>

    <div class="row">
        <div class="input-field col s12">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col s12">
            {{ form_row(form.description) }}
        </div>
    </div>

    {{ form_widget(form.content) }}
    <div>
        <button type="submit" class="btn-large waves-effect waves-light">Créer</button>
    </div>
    {{ form_end(form) }}

{% endblock %}