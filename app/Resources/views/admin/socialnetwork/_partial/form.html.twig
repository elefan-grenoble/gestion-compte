<div class="errors">
    {{ form_errors(form) }}
</div>
<div class="row">
    <div class="col s12">
        {{ form_row(form.name) }}
    </div>
</div>
<div class="row">
    <div class="col s12">
        {{ form_row(form.description) }}
    </div>
</div>
<div class="row">
    <div class="col s12">
        {{ form_row(form.url) }}
    </div>
</div>
<div class="row">
    <div class="col s12">
        {{ form_errors(form.displayed_footer) }}
        <label>
            {{ form_widget(form.displayed_footer) }}
            <span>{{ form.displayed_footer.vars.label }}</span>
        </label>
    </div>
</div>
