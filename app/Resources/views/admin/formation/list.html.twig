{% extends 'layout.html.twig' %}

{% block title %}Liste des formations - {{ site_name }}{% endblock %}

{% block breadcrumbs %}
<a href="{{ path('homepage') }}"><i class="material-icons">home</i></a><i class="material-icons">chevron_right</i>
<a href="{{ path('admin') }}"><i class="material-icons">build</i>&nbsp;Administration</a><i class="material-icons">chevron_right</i>
<i class="material-icons">list</i>&nbsp;Liste des formations
{% endblock %}

{% block content %}
    <h4>Liste des formations ({{ formations | length }})</h4>

    <table class="responsive-table">
        <thead>
            <tr>
                <th>Formation</th>
                <th>Nombre de membres</th>
                <th>Rôles associés</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
                <tr>
                    <td>{{ formation.name }}</td>
                    <td>{{ formation.beneficiaries | length }}</td>
                    <td>
                        {% for role in formation.roles %}
                            <div class="chip purple-text">{{ role }}</div>
                        {% endfor %}
                    </td>
                    <td><a href="{{ path("formation_edit", { 'id': formation.id }) }}"><i class="material-icons">edit</i>editer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <br />
    <a href="{{ path('formation_new') }}" class="btn"><i class="material-icons left">add</i>Ajouter une formation</a>
{% endblock %}
