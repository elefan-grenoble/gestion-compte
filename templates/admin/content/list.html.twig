{% extends 'layout.html.twig' %}

{% block title %}Contenus dynamiques - {{ site_name }}{% endblock %}

{% block breadcrumbs %}
<a href="{{ path('homepage') }}"><i class="material-icons">home</i></a><i class="material-icons">chevron_right</i>
<a href="{{ path('admin') }}"><i class="material-icons">build</i>&nbsp;Administration</a><i class="material-icons">chevron_right</i>
<i class="material-icons">list</i>&nbsp;Contenus dynamiques
{% endblock %}

{% block content %}
    <h4>Contenus dynamiques</h4>

    {% for dynamicContents in dynamicContentsByType %}
        <h5>{{ dynamicContents[0].getType }}</h5>
        <div class="row">
            {% for dynamicContent in dynamicContents %}
                <div class="col s12 m4">
                    <div class="card blue-grey darken-1 small">
                        <div class="card-content white-text">
                            <span class="card-title"><i class="material-icons left">content_paste</i>{{ dynamicContent.name }}</span>
                            {{ dynamicContent.description }}
                            {% if dynamicContent.updatedBy %}
                                <br />
                                <br />
                                <i>Derni√®re modification le {{ dynamicContent.updatedAt | date_fr_full_with_time }} par {{ dynamicContent.updatedBy }}</i>
                            {% endif %}
                        </div>
                        <div class="card-action">
                            <div class="left">
                                <a href="{{ path("dynamic_content_edit", { 'id': dynamicContent.id }) }}"><i class="material-icons left">edit</i>Editer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
